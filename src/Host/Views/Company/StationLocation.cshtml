@using Newtonsoft.Json
@model List<Host.DataModel.StationLocationDto>
@{
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<style>
    #th {
        background-color: #191919;
        color: white
    }

   
</style>

<div class="col-xs-12">
    <ol class="breadcrumb">
        <li class="fa fa-dashboard"><a href="@Url.Action(" CompanyCreation","Company")">Company</a></li>
        <li><i class="fa fa-delicious"></i><a href="@Url.Action(" Branch","Company")">Branch</a></li>
        <li><i class="fa fa-location-arrow"></i><a href="@Url.Action(" LocationCreation","Company")">Location</a></li>
        <li class="active"><i class="fa fa-suitcase "></i>Station Location</li>

    </ol>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title" style="font-family:'Times New Roman'">Station Data Table</h3></br>
            </br>
            <!-- Trigger the modal with a button -->

            <a class="btn  btn-primary " style="background-color:#323232" onclick='@($"window.location.href='/Company/AddStationLocation?locationId={ViewBag.LocationId}'")'>Add Station</a>
        </div>

        <!-- /.box-header -->
        <div class="box-body" style="width: 100%; height: 400px;">
            @Html.Hidden("locationId", (int)ViewBag.LocationId)
            <table id="example2" class="table table-bordered table-hover">
                <thead id="th">
                    <tr>

                        <th>Station</th>
                        <th>Qr Code</th>
                        <th>Options</th>

                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var s in Model)
                    {
                        <tr>

                            <td>@s.StationName</td>
                            <td id="@(s.StationLocationId)"> </td>
                            <td>
                                <a class="fa fa-download  " onClick='@($"window.location.href='/Company/Download?id={s.StationId}&locationId={ViewBag.LocationId}&code={s.Code}'")'>Download</a>
                                <a class="fa fa-edit" href='#' onClick='@($"window.location.href='/Company/AddStationLocation?locationId={ViewBag.LocationId}&stationlocationId={s.StationLocationId}'")'>Edit</a>
                            </td>
                        </tr>
                    }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>
