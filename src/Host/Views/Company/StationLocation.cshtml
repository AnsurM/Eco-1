@using Newtonsoft.Json
@model List<Host.DataModel.StationLocationDto>
@{
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<style>
    #th {
        background-color: #191919;
        color: white
    }
</style>

<div class="col-xs-12">
    <ol class="breadcrumb">
        <li class="fa fa-dashboard"><a href="@Url.Action("CompanyCreation","Company")">Company</a></li>
        <li><i class="fa fa-delicious"></i><a href="@Url.Action("Branch","Company")">Branch</a></li>
        <li><i class="fa fa-location-arrow"></i><a href="@Url.Action("LocationCreation","Company")">Location</a></li>
        <li class="active"><i class="fa fa-suitcase "></i>Station Location</li>

    </ol>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title" style="font-family:'Times New Roman'">Station Data Table</h3></br>
            </br>
            <!-- Trigger the modal with a button -->

            <a class="btn  btn-primary " style="background-color:#323232" onclick='@($"window.location.href='/Company/AddStationLocation?locationId={ViewBag.LocationId}'")'>Add Station</a>
        </div>

        <!-- /.box-header -->
        <div class="box-body" style="width: 100%; height: 400px;">
            @Html.Hidden("locationId", (int)ViewBag.LocationId)
            <table id="example2" class="table table-bordered table-hover">
                <thead id="th">
                    <tr>
                        <th>Station</th>
                        <th>Qr Code</th>
                        <th>Options</th>

                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var s in Model)
                    {
                    <tr>
                        
                        <td class="right"><input type="checkbox" class="checkbox">@s.StationName</td>
                        <td id="@(s.StationLocationId)"> </td>
                        <td>
                            <a class="fa fa-download  " onClick='@($"window.location.href='/Company/Download?id={s.StationId}&locationId={ViewBag.LocationId}'")'>Download</a>
                            <a class="fa fa-edit" href='#' onClick='@($"window.location.href='/Company/AddStationLocation?locationId={ViewBag.LocationId}&stationlocationId={s.StationLocationId}'")'>Edit</a>
                        </td>
                    </tr>
                    }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>
<link href="~/dist/css/font-awesome.css" rel="stylesheet" />
<!--<link href="~/dist/css/material-bootstrap-wizard.css" rel="stylesheet" />-->
<!--<script src="~/dist/js/material-bootstrap-wizard.js"></script>-->
<script type="text/javascript">
    var myArray = [];
    var url
    var tbody = document.getElementById("tbody");

    var model = @Html.Raw(JsonConvert.SerializeObject(Model));
    for (let m of model) {
        myArray.push({
            id: m.StationLocationId,
            name: m.StationName,
            code : m.Code
        });
    }
    var lstOfImage = [];
    for (let model of myArray) {
        const oImg = document.createElement("img");
        oImg.setAttribute('src', 'https://api.qrserver.com/v1/create-qr-code/?data=' + model.code + '&amp;size=50x50');
            oImg.style.width = '50px';
        oImg.style.height = '50px';
        const element = document.getElementById(String(model.id));
        element.appendChild(oImg);
        //lstOfImage.push({
        //    id: model.id,
        //    image: qrcode

        //});
        //var image = document.getElementById(string(model.id))
        }
    console.log(myArray);



</script>


@section Scripts{
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
    <script src="http://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example2').DataTable();
        });

    </script>
}
