@model Host.DataModel.EditObseravationDto
@{
    if (ViewBag.Role == "Admin")
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_ClientDashboard";

    }
}


<style>
    .error {
        color: red;
    }
</style>

<!-- Main content -->
<div class="page-header col-md-10">
    <div class="row">

    </div>
</div>

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h4 style="font-family:'Times New Roman'">Observation</h4>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form class="form-horizontal" asp-controller="Company" asp-action="GetBranchObservationById" method="post">
                                <input type="hidden" asp-for="ObseravtionId">
                                @if (User.IsInRole("Admin"))
                                {
                            <div class="form-group">
                                <label class="col-md-2 control-label">Description <i class="fa fa-asterisk" style="color:red" aria-hidden="true"></i></label>
                                <div class="col-md-6">
                                    <input class="form-control" type="text" asp-for="Description">
                                    <span asp-validation-for="Description" class="text-danger"></span>

                                </div>
                            </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Status<i class="fa fa-asterisk" style="color:red" aria-hidden="true"></i></label>
                                    <div class="col-md-6">
                                        <select class="form-control" asp-for="Status" placeholder="Select Business Name...">
                                            <option selected="selected">Select</option>
                                            <option>WorkDone</option>
                                            <option>Pending</option>
                                            <option>Rejected</option>
                                        </select>
                                        <input hidden="hidden" asp-for="BranchId" />
                                    </div>
                                </div>}
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Action On Client End</label>

                                    <div class="col-md-6">
                                        <input class="form-control" type="text" asp-for="ClientReview">
                                        <input type="hidden" asp-for="ClientReviewDate" />
                                    </div>
                                    <input hidden="hidden" asp-for="BranchId" />
                                </div>
                                <div>
                                    <button type="submit" value="submit" asp-action="UpdateActiviyObservation" class="btn ">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- /.content -->
