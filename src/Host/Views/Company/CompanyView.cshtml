@model List<Host.DataModel.GetCompanyViewDto>
@{
    Layout = "_AdminLayout";
}

<section class="main-contents">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                <div class="panel-heading">
                        <h3 class="panel-title">All Company</h3>
                    
                    <div class="panel-controls">
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="Employees" class="table table-hover table-striped table-bordered text-center">
                            <colgroup>
                                <col />
                                <col />
                                <col />
                                <col />
                                <col />
                                <col />
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Branch Name</th>
                                    <th>Employee Name</th>
                                    <th>Stations</th>
                                    <th>Activity</th>
                                    <th>Wizard</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in Model)
                                {
                                    <tr>
                                        <td style="text-align: center">@s.CompanyName
                                            <a class="text-primary"></a>
                                        </td>
                                        <td style="text-align: center">@s.BranchName
                                            <span>
                                                <i class='zmdi large-size'></i>
                                            </span>
                                        </td>
                                        <td style="text-align: center">@s.EmployeeName
                                            <span>
                                                <i class='zmdi  large-size'></i>
                                            </span>
                                        </td>
                                        <td style="text-align: center">
                                            <span>
                                                <i class='zmdi large-size'></i>
                                            </span>
                                        </td>   
                                        <td style="text-align: center">
                                            <span>
                                                <i class='zmdi large-size'></i>
                                            </span>
                                        </td>
                                        <td style="text-align: center">
                                            <a class="btn btn-default" asp-controller="Company" asp-action="CompanyWizard">Open</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!--end panel -->
    </div>
</section>