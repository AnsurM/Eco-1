@model Host.DataModel.ActivityDto
@{
    Layout = "_AdminLayout";
}

<!-- Main content -->
<div class="page-header col-md-10">
    <div class="row">
       
    </div>
</div>

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h4>New Activity</h4>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form class="form-horizontal" asp-controller="Company" asp-action="AddActivity" method="post">
                                <input type="hidden" asp-for="ActivityId" />
                                <input type="hidden" asp-for="StationId" />

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Type</label>
                                    <div class="col-md-4">
                                        <select class="form-control" asp-items="@Model.Types" asp-for="ActivityTypeId" placeholder="Select Business Name..."></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Activity Name <i class="fa fa-asterisk" style="color:red" aria-hidden="true"></i></label>
                                    <div class="col-md-4">
                                        <input class="form-control" type="text" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Description</label>
                                    <div class="col-md-4">
                                        <input class="form-control" type="text" asp-for="Description">
                                        <span asp-validation-for="Description"></span>
                                    </div>
                                </div>

                                <button type="submit" class="btn-primary top-right">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- /.content -->
