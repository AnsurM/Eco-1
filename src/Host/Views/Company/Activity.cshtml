
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Manage Activity";
}

<div class="page-header">
    <div class="row">
        <div class="col-sm-9 col-xs-6">
            <h1>Manage Activity</h1>
        </div>
    </div>
</div>
<section id="formProfile" method="Post" class="main-contents">
    <div class="form-horizontal">
        <div class="row">
            <div class="col-sm-12">
                <form class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group" style="margin-left: 1em;margin-right: 1em;">
                                <label class="col-sm-2 label">Supervisor</label>
                                <div class="col-sm-6">
                                    <input type="hidden"/>
                                    <input type="text" class="form-control"  readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group" style="margin-left: 1em;margin-right: 1em;">
                                <label class="col-sm-2 label">Company</label>
                                <div class="col-sm-6">
                                    <select multiple="multiple" placeholder="Select Company..."></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-1 pull-right sm-right10">
                                <button id="btnSubmit" type="button" class="btn btn-primary  btn-lg-block btn-md-block btn-sm-block btn-xs-block" onclick="saveCompany();">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default table-panel">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tblCompany" class="table table-striped table-bordered" style="width: 100%;">
                                <thead> 
                                    <tr>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th>Code</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>