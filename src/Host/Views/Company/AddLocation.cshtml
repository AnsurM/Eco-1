@model Host.DataModel.LocationDto
@{
    Layout = "_AdminLayout";
}

<!-- Main content -->
<div class="page-header">
    <div class="row">
        <div class="col-sm-9 col-xs-6">
            <h2>Add Location</h2>
        </div>
    </div>
</div>

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form class="form-horizontal" asp-controller="Company" asp-action="AddLocation" method="post">
                                <input type="hidden" asp-for="LocationId" />
                                <input type="hidden" asp-for="BranchId" />
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Location Name</label>
                                    <div class="col-md-4">
                                        <input class="form-control" type="text" asp-for="Name" >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">QR Code</label>
                                    <div class="col-md-10">

                                        <input id="text" type="text"
                                               value="abc" style="Width:20%"
                                               onblur='generateBarCode();' />

                                        <img id='barcode'
                                             alt=""
                                             title="arsalan"
                                             width="50"
                                             height="50" />

                                    </div>
                                </div>
                                
                                <button type="submit" class="btn-primary top-right">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function generateBarCode() {
        var nric = $('#text').val();
        var url = 'https://api.qrserver.com/v1/create-qr-code/?data=' + nric + '&amp;size=50x50';
        $('#barcode').attr('src', url);
    }
</script>



<!-- /.content -->
