@model Host.DataModel.LocationDto
@{
    Layout = "_AdminLayout";
}

<!-- Main content -->
<div class="page-header col-md-10">
    
</div>
@*<div class="row">

</div>*@

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h4 style="font-family:'Times New Roman'">Add Location</h4>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form class="form-horizontal" asp-controller="Company" asp-action="AddLocation" method="post">
                                <input type="hidden" asp-for="LocationId" />
                                <input type="hidden" asp-for="BranchId" />
                                <input type="hidden" asp-for="CompanyId"/>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Location Name<i class="fa fa-asterisk" style="color:red" aria-hidden="true"></i></label>
                                    <div class="col-md-4">
                                        <input class="form-control" type="text" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>


                                <button type="submit" class="btn btn-default btn-md">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function generateBarCode() {
        var nric = $('#text').val();
        var url = 'https://api.qrserver.com/v1/create-qr-code/?data=' + nric + '&amp;size=50x50';
        $('#barcode').attr('src', url);
    }
</script>



