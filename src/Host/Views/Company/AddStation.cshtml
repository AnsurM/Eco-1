@model Host.DataModel.StationDto
@{
    Layout = "_AdminLayout";
}

<!-- Main content -->
<div class="page-header">
    <div class="row">
        <div class="col-sm-9 col-xs-6">
            <h2>New Station</h2>
        </div>
    </div>
</div>

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form class="form-horizontal" asp-controller="Company" asp-action="AddStation" method="post">
                                <input type="hidden" asp-for="StationId" />
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Station Name</label>
                                    <div class="col-md-10">
                                        <input class="form-control" type="text" asp-for="Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Description</label>
                                    <div class="col-md-10">
                                        <input class="form-control" type="text" asp-for="Description">
                                    </div>
                                </div>
                               
                                <button type="submit" class="btn-primary top-right">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- /.content -->
