@model Host.DataModel.StationDto
@{
    Layout = "_AdminLayout";
}

<!-- Main content -->
<div class="page-header">
   
</div>

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h4 style="font:italic">New Station</h4>
                    <div class="panel panel-default">

                        <div class="panel-body">
                            <form class="form-horizontal" asp-controller="Company" asp-action="AddStation" method="post">
                                <input type="hidden" asp-for="StationId" />
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Station Name<i class="fa fa-asterisk" style="color:red" aria-hidden="true"></i></label>
                                    <div class="col-md-4">
                                        <input class="form-control" type="text" asp-for="Name" >
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Description</label>
                                    <div class="col-md-4">
                                        <input class="form-control" type="text" asp-for="Description">

                                    </div>
                                </div>

                                <button type="submit" class="btn-primary top-right">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- /.content -->
