@model List<Host.DataModel.BranchDto>


@{
    Layout = "_AdminLayout";
}

<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Company Data Table</h3></br>
            </br>
            <!-- Trigger the modal with a button -->

            <a class="btn  btn-primary " href="@Url.Action("AddBranch", "Company")">Add</a>

        </div>

        <!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Branch Name</th>
                        <th>Company Name</th>
                        <th>Location</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Options</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                    <tr>
                        <td style="text-align: center">@s.Name</td>
                        <td style="text-align: center">@s.CompanyName</td>
                        <td style="text-align: center">@s.Location</td>
                        <td style="text-align: center">@s.Address</td>
                        <td style="text-align: center">@s.Phone</td>
                        <td style="text-align: center">@s.Email</td>
                        <td>
                            <button class="btn btn-default" onClick='@($"window.location.href='/Company/GetBranchById?id={s.BranchId}'")'>Edit</button>
                        </td>
                    </tr>
                    }

            </table>
        </div>
    </div>
</div>


