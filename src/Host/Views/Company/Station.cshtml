@model List<Host.DataModel.GetStationDto>

@{
    ViewData["Title"] = "Station";
}

<!--MainContent-->
@{
    Layout = "_AdminLayout";
}
<style>
    .modal-header, h4, .close {
        background-color: #5cb85c;
        color: white !important;
        text-align: center;
        font-size: 30px;
    }

    .modal-footer {
        background-color: #f9f9f9;
    }
</style>

<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Station Data Table</h3></br>
            </br>
            <!-- Trigger the modal with a button -->
            <button type="button" class="btn  btn-primary " onclick="addModel()" id="myBtn">Add Station</button>

        </div>

        <!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Station No</th>
                        <th>Station Name</th>
                        <th>Description</th>
                        <th>Activity</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.StationId</td>
                            <td>@s.Name</td>
                            <td>@s.Description</td>
                            @if (@s.Activities != null)
                            {
                                @foreach (var a in s.Activities)
                                {
                                    <th class="label label-danger ">@a</th>
                                }
                                <td>
                                <button type="button" class="btn  btn-primary glyphicon glyphicon-edit " onclick="editModel(@s.StationId)" style="width:16%"></button>
                                <a href="DeleteStation/id/@s.StationId" class="btn  btn-primary glyphicon glyphicon-trash " id="edit" style="width:16%"></a>
                            </td>
                            }
                            else
                            {
                                <td class="label label-danger "></td>
                                <td>
                                    <button type="button" class="btn  btn-primary glyphicon glyphicon-edit " onclick="editModel(@s.StationId)" style="width:16%"></button>
                                    <a href="DeleteStation/id/@s.StationId" class="btn  btn-primary glyphicon glyphicon-trash " id="edit" style="width:16%"></a>
                                </td>

                            }


                        </tr>
                    }
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>
<!--Modal-->
<form id="stationFormId">
    <div class="container">
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><span class="glyphicon glyphicon-lock"></span>Station Creation</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <div class="form-group">
                            <label for="usrname"> Station Name</label>
                            <input type="text" class="form-control" id="stationName" placeholder="Station Name">
                        </div>
                        <div class="form-group">
                            <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Description</label>
                            <input type="text" class="form-control" id="stationDescription" placeholder="Description">
                        </div>

                        <button type="button" onclick="postStation()" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Submit</button>
                    </div>

                </div>

            </div>
        </div>
    </div>
</form>
<!---EDIT MODAL-->

<form id="formActivity">
    <div class="container">
        <!-- Modal -->
        <div class="modal fade" id="editModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><span class="glyphicon glyphicon-lock"></span>Activity</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">

                        <input type="hidden" id="editStationId" />
                        <div class="form-group">
                            <label for="usrname"> Station Name</label>
                            <input type="text" class="form-control" id="editUserName" placeholder="Station Name">
                        </div>

                        <div class="form-group pull-right">
                            <i class="glyphicon glyphicon-plus" onclick="AddTextBox()"></i>
                        </div>
                        <br />
                        <br />
                        <div id="TextBoxContainer">
                            <!--Textboxes will be added here -->
                        </div>
                        <br />
                        <button type="button" onclick="postActivity()" id="addActivity"> Sumbit</button>
                    </div>

                </div>

            </div>
        </div>
    </div>
</form>
<script src="~/dist/js/Station.js"></script>

