@model Host.DataModel.BranchEmployeeDto
@{
    Layout = "_AdminLayout";
}

<!-- Main content -->
<div class="page-header">
    <div class="row">
        <div class="col-sm-9 col-xs-6">
            <h2>New Branch</h2>
        </div>
    </div>
</div>

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form class="form-horizontal" asp-controller="Company" asp-action="AddBrancEmployee" method="post">
                                <input type="hidden" data-val="true">
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="Company">Company Name</label>
                                    <div class="col-md-10">
                                        <select class="form-control" onchange="getBranchDropdownById(CompanyId.value)" asp-items="@Model.Companies" asp-for="CompanyId">
                                            <option disabled="disabled" selected="selected">Select Company Name...</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="Company">Branch Name</label>
                                    <div class="col-md-10">
                                        <select class="form-control" asp-for="BranchId">
                                            <option disabled="disabled" selected="selected">Select Branch Name</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Employee Name</label>
                                    <div class="col-md-10">
                                        <input class="form-control" type="text" asp-for="EmployeeName">
                                        @*<span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>*@
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Designation</label>
                                    <div class="col-md-10">
                                        <input class="form-control" type="text" asp-for="Designation">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Phone</label>
                                    <div class="col-md-10">
                                        <input class="form-control" type="text" asp-for="Phone">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Email</label>
                                    <div class="col-md-10">
                                        <input class="form-control" type="text" asp-for="Email">
                                    </div>
                                </div>
                                <button type="submit">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/dist/BranchEmployee.js"></script>


<!-- /.content -->
