@model Host.DataModel.CompanyDto
@{
    Layout = "_AdminLayout";
}

<style>
    .error{
        color:red;
    }
</style>

<!-- Main content -->
<div class="page-header">
    <div class="row">
        
    </div>
</div>

<div class="main-contents">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h4 style="font-family:'Times New Roman'">NewCompany</h4>
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <form class="form-horizontal" asp-controller="Company" asp-action="AddCompany" method="post">
                                <input type="hidden" asp-for="CompanyId">

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Company Name <i class="fa fa-asterisk" style="color:red" aria-hidden="true"></i></label>
                                    <div class="col-md-6">
                                        <input class="form-control" type="text" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Type</label>
                                    <div class="col-md-6">
                                        <input class="form-control" type="text" asp-for="Type">

                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">URL<i class="fa fa-asterisk" style="color:red" aria-hidden="true"></i></label>
                                    <div class="col-md-6">
                                        <input class="form-control" type="text" asp-for="Url">
                                        <span asp-validation-for="Url" class="text-danger"></span>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" value="submit" class="btn ">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- /.content -->
        


