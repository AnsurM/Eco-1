@model LoginInputModel
@{
    Layout = "~/Views/Shared/_LayoutSign.cshtml";
    ViewData["Title"] = "Sign";
}

<link href="~/css/main.css" rel="stylesheet" />

<div class="limiter">
    <div class="container-login100">

        <div class="wrap-login100">
            <div class="container-login100-form-btn">
                <img src="~/images/Eco.jpg" />
            </div>
            <form class="login100-form validate-form" asp-controller="Account" asp-action="Login" method="post">

                @*<span class="login100-form-title p-b-26">
            Eco Service
        </span>
        <span class="login100-form-title p-b-48">
            <i class="zmdi zmdi-font"></i>
        </span>*@

                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email"  class="text-danger field-validation-valid"></span>
                    @*<span class="focus-input100" asp-validation-for="Email"></span>*@
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input class="input100" type="password" asp-for="Password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
                    <span class="focus-input100" asp-validation-for="Password"></span>
                </div>
                <div class="clearfix">
                    <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
                    <a href='@Url.Action("ForgetPassword", "Home")' class="pull-right">Forgot Password?</a>
                </div>
                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button type="submit" class="login100-form-btn">Sign In</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

